require "bundler/setup"
require "irb"
require "couchbase"

include Couchbase # rubocop:disable Style/MixinUsage for brevity

customer123 = {
  "name" => "Douglas Reynholm",
  "email" => "douglas@reynholmindustries.com",
  "addresses" =>
    {
      "billing" =>
        {
          "line1" => "123 Any Street",
          "line2" => "Anytown",
