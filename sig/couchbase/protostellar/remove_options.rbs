  module Protostellar
    class RemoveOptions
      DEFAULT: RemoveOptions

      attr_accessor cas: Integer?
      attr_accessor durability_level: durability_level
      attr_reader timeout: Integer | _CanInMilliseconds | nil

      def initialize: (
          cas: Integer?,
