module Couchbase
  module Protostellar
    class ReplaceOptions
      DEFAULT: ReplaceOptions

      attr_accessor expiry: Integer | _CanInSeconds | nil
      attr_accessor transcoder: JsonTranscoder | _CanEncode
      attr_accessor cas: Integer?
      attr_accessor durability_level: durability_level
      attr_accessor preserve_expiry: bool
      attr_reader timeout: Integer | _CanInMilliseconds | nil
      attr_reader document_content_type: document_content_type

      def initialize: (
          expiry: Integer | _CanInSeconds | nil,
          preserve_expiry: bool,
          transcoder: JsonTranscoder | _CanEncode,
          cas: Integer?,
          durability_level: durability_level,
          timeout: Integer | _CanInMilliseconds | nil,
        ) -> void

      def to_request: () -> Hash[Symbol, untyped]
    end
  end
end
